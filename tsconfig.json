{
  "extends": "@react-native/typescript-config",
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["**/node_modules", "**/Pods"],
  "compilerOptions": {
    "jsx": "react-jsx",
    "types": ["react", "react-native"],
    "baseUrl": ".",
    "paths": {
      "@/src/*": ["src/*"],
      "@/assets/*": ["assets/*"]
    }
  }
}
